.fullscreen-editor {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease;
}

.close-button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 48rpx;
  z-index: 1001;
  transition: transform 0.2s ease;
}

.close-button:active {
  transform: scale(0.9);
}

.fullscreen-editor.visible {
  opacity: 1;
  visibility: visible;
}

.fullscreen-editor.visible .editor-content {
  transform: translateY(0);
}


.fullscreen-editor:not(.visible) .editor-content {
  transform: translateY(100%);
  opacity: 0;
  transition: transform 0.3s ease, opacity 0.3s ease; /* 确保取消时有动画 */
}

.editor-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 95vh; /* 调整为3/4屏幕高度 */
  background-color: #000000;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease, opacity 0.3s ease;
}

.fullscreen-editor.visible .editor-content {
  transform: translateY(0);
}

.editor-content.expanded {
  height: 95vh;
}


/* 编辑区域 */
.edit-container {
  padding: 20rpx;
  max-height: calc(95vh - 180rpx);
  overflow-y: auto;
}

.edit-area {
  background-color: #1a1a1a;   /* box样式还是可保留 */
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  height: calc(95vh - 120rpx); /* 调整高度，充分利用空间 */
  overflow-y: auto;
}


.input-area {
  width: 100%;
  height: calc(95vh - 180rpx); /* 让输入区域占满剩余空间 */
  color: #ffffff;
  font-size: 28rpx;
  line-height: 1.6;
  background: transparent;
  padding: 10rpx;
  box-sizing: border-box;
}