.text-preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  height: 95vh;
  background-color: #fff;
  border-radius: 12px 12px 0 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  animation: slideUp 0.2s ease-out forwards;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  height: 44px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15px;
  border-bottom: 1px solid #eee;
}

.icon-button {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8rpx;
}

.icon-button .icon {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.text-content {
  flex: 1;
  padding: 15px;
  font-size: 14px;
  color: #333;
  line-height: 1.6;
}