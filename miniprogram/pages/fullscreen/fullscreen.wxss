/* 全屏容器 */
.fullscreen-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #000000;
  padding: 0;
  box-sizing: border-box;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background-color: #1a1a1a;
  padding: 20rpx;
  border-bottom: 2rpx solid #333333;
}

.tab {
  flex: 1;
  text-align: center;
  color: #999999;
  font-size: 32rpx;
  padding: 20rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab.active {
  color: #4080ff;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #4080ff;
  border-radius: 2rpx;
}

/* 编辑区域 */
.edit-container {
  flex: 1;
  overflow: auto;
  padding: 20rpx;
}

.edit-area {
  background-color: #1a1a1a;
  border-radius: 16rpx;
  padding: 20rpx;
  min-height: calc(100vh - 240rpx);
  box-sizing: border-box;
}

.input-area {
  width: 100%;
  min-height: calc(100vh - 280rpx);
  color: #ffffff;
  font-size: 28rpx;
  line-height: 1.6;
  background: transparent;
  padding: 10rpx;
  box-sizing: border-box;
}

/* 底部按钮 */
.bottom-buttons {
  display: flex;
  padding: 20rpx;
  background-color: #1a1a1a;
  border-top: 2rpx solid #333333;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin: 0 10rpx;
}

.btn.cancel {
  background-color: #333333;
  color: #ffffff;
}

.btn.save {
  background-color: #4080ff;
  color: #ffffff;
}

/* 隐藏元素 */
.hidden {
  display: none;
} 