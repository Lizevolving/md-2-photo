<view class="container">
  <!-- 标题 -->
  <view class="title">文图</view>

  <!-- 问题编辑区 -->
  <view class="edit-area question-area">
    <textarea 
      class="input-area" 
      placeholder="在此粘贴问题..." 
      model:value="{{questionContent}}"
      bindinput="handleQuestionInput"
    />
    <view class="paste-btn {{questionContent ? 'hidden' : ''}}" bindtap="handlePasteQuestion">
      <image class="paste-icon" src="/assets/icons/paste.png" />
      粘贴
    </view>
  </view>

  <!-- 回答编辑区 -->
  <view class="edit-area answer-area">
    <textarea 
      class="input-area" 
      placeholder="在此粘贴回答..." 
      model:value="{{answerContent}}"
      bindinput="handleAnswerInput"
    />
    <view class="button-group">
      <view class="paste-btn {{answerContent ? 'hidden' : ''}}" bindtap="handlePasteAnswer">
        <image class="paste-icon" src="/assets/icons/paste.png" />
        粘贴
      </view>
      <view class="fullscreen-btn" bindtap="handleFullscreen">
        <image class="fullscreen-icon" src="/assets/icons/fullscreen.png" />
      </view>
    </view>
  </view>

  <!-- 底部按钮组 -->
  <view class="bottom-buttons">
    <button 
      class="action-btn clear {{hasContent ? 'active' : ''}}" 
      bindtap="handleClear"
    >清空内容</button>
    <button 
      class="action-btn convert {{hasContent ? 'active' : ''}}" 
      bindtap="handleConvertToImage"
    >转换成图片</button>
    <button 
      class="action-btn text {{hasContent ? 'active' : ''}}" 
      bindtap="handleConvertToText"
    >转换纯文本</button>
  </view>

  <!-- 水印开关 -->
  <view class="watermark-switch">
    <text>添加 内容由DeepSeek 生成的 水印</text>
    <switch checked="{{showWatermark}}" bindchange="handleWatermarkChange" />
  </view>
</view> 