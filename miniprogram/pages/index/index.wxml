<view class="container">
  <!-- 标题 -->
  <view class="title">文图</view>

  <!-- 问题编辑区 -->
  <view class="edit-area question-area">
    <textarea 
      class="input-area" 
      placeholder="在此粘贴问题..." 
      value="{{questionContent}}"
      bindinput="handleQuestionInput"
      show-confirm-bar="{{false}}"
      auto-height
    />
    <view class="paste-button {{questionContent ? 'hidden' : ''}}" bindtap="handlePasteQuestion">
      <image class="icon" src="data:image/svg+xml;base64," />
      <text>粘贴</text>
    </view>
  </view>

  <!-- 回答编辑区 -->
  <view class="edit-area answer-area">
    <textarea 
      class="input-area" 
      placeholder="在此粘贴回答..." 
      value="{{answerContent}}"
      bindinput="handleAnswerInput"
      show-confirm-bar="{{false}}"
      auto-height
      style="min-height: 300rpx;"
    />
    <view class="button-group">
      <view class="paste-button {{answerContent ? 'hidden' : ''}}" bindtap="handlePasteAnswer">
        <image class="icon" src="data:image/svg+xml;base64," />
        <text>粘贴</text>
      </view>
      <view class="fullscreen-button" bindtap="handleFullscreen">
        <image class="icon" src="data:image/svg+xml;base64," />
      </view>
    </view>
  </view>

  <!-- 底部按钮组 -->
  <view class="bottom-buttons">
    <button 
      class="action-btn clear {{hasContent ? 'active' : ''}}" 
      bindtap="handleClear"
    >清空内容</button>
    <button 
      class="action-btn convert {{hasContent ? 'active' : ''}}" 
      bindtap="handleConvertToImage"
    >转换成图片</button>
    <button 
      class="action-btn text {{hasContent ? 'active' : ''}}" 
      bindtap="handleConvertToText"
    >转换纯文本</button>
  </view>
  <text-preview id="textPreview"></text-preview>
</view>