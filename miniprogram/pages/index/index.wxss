/* 容器样式 */
.container {
  min-height: 100vh;
  background-color: #000000;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: fixed;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* 标题样式 */
.title {
  color: #ffffff;
  font-size: 48rpx;
  text-align: left;
  font-weight: bold;
  margin: 20rpx 0 40rpx;
}

/* 编辑区域公共样式 */
.edit-area {
  width: calc(100% - 40rpx);
  margin: 0 auto 20rpx;
  background-color: #1a1a1a;
  border-radius: 16rpx;
  position: relative;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 问题编辑区特有样式 */
.question-area {
  height: 200rpx;
  flex-shrink: 0;
}

/* 回答编辑区特有样式 */
.answer-area {
  flex: 1;
  min-height: 400rpx;
  max-height: calc(100vh - 800rpx);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 输入框样式 */
.input-area {
  width: 100%;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 1.6;
  background: transparent;
  padding: 10rpx;
  box-sizing: border-box;
}

/* 问题区域的输入框 */
.question-area .input-area {
  height: 100%;
  padding: 20rpx;
}

/* 回答区域的输入框 */
.answer-area .input-area {
  height: 100%;
  padding: 20rpx;
  overflow-y: auto;
}

/* 粘贴按钮样式 */
.paste-button {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  display: flex;
  align-items: center;
  background-color: rgba(64, 128, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  color: #4080ff;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(64, 128, 255, 0.2);
}

.paste-button .icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.paste-button text {
  color: #4080ff;
  font-weight: 500;
}

/* 全屏按钮样式 */
.fullscreen-button {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background-color: rgba(64, 128, 255, 0.2);
  padding: 12rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(64, 128, 255, 0.2);
}

.fullscreen-button .icon {
  width: 36rpx;
  height: 36rpx;
  display: block;
}

/* 底部按钮组样式 */
.bottom-buttons {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  gap: 30rpx;
  padding: 20rpx;
  flex-shrink: 0;
  background-color: #000000;
  position: relative;
  z-index: 1;
}

.action-btn {
  flex: 0 1 auto;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #333333;
  color: #bbbbbb;
  border: none;
  padding: 0 32rpx;
  min-width: 160rpx;
  max-width: 200rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.action-btn.active {
  background-color: #4080ff;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(64, 128, 255, 0.3);
}

.action-btn.clear.active {
  background-color: #ff4040;
  box-shadow: 0 4rpx 12rpx rgba(255, 64, 64, 0.3);
}

/* 隐藏元素 */
.hidden {
  display: none;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
}

/* 按钮通用样式 */
button {
  flex: 1;
} 