<!-- preview.wxml -->
<view class="preview-container">
  <!-- 画布区域 -->
  <canvas type="2d" id="previewCanvas" class="preview-canvas"></canvas>
  
  <!-- 底部按钮 -->
  <view class="bottom-buttons">
    <button class="btn back" bindtap="goBack">返回</button>
    <button class="btn save" bindtap="saveImage">保存图片</button>
  </view>
</view> 