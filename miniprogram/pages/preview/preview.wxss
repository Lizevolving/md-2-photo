/* 预览容器 */
.preview-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  background-color: #000000;
}

/* 预览滚动区域 */
.preview-scroll {
  flex: 1;
  width: 100%;
  background-color: #1a1a1a;
  overflow: hidden;
}

/* 预览画布 */
.preview-canvas {
  width: 100%;
  min-height: 100%;
  background-color: #000000;
}

/* 底部操作区 */
.bottom-area {
  width: 100%;
  background-color: #1a1a1a;
  padding: 20rpx 0;
  border-top: 1px solid #333333;
}

/* 操作按钮区 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #333333;
}

/* 单个操作按钮 */
.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.action-btn text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 水印开关区域 */
.watermark-switch {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  color: #ffffff;
  font-size: 28rpx;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
}

.container {
  padding: 20rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #000000;
}

.preview-area {
  flex: 1;
  background-color: #1e1e1e;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow-y: auto;
}

.preview-area rich-text {
  color: #ffffff;
}

.button-group {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
}

button {
  flex: 1;
} 