/* 预览容器 */
.preview-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #000000;
  position: relative;
}

/* 预览画布 */
.preview-canvas {
  width: 100%;
  height: calc(100% - 100rpx);
  background-color: #000000;
}

/* 底部按钮 */
.bottom-buttons {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx;
  background-color: #1a1a1a;
  border-top: 2rpx solid #333333;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin: 0 10rpx;
}

.btn.back {
  background-color: #333333;
  color: #ffffff;
}

.btn.save {
  background-color: #4080ff;
  color: #ffffff;
}

.container {
  padding: 20rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #000000;
}

.preview-area {
  flex: 1;
  background-color: #1e1e1e;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow-y: auto;
}

.preview-area rich-text {
  color: #ffffff;
}

.button-group {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
}

button {
  flex: 1;
} 